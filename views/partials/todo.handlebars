<article class="todo-item">
    <div class="todo-icon">
        <i class='!!!'></i>
    </div>
    <div class="todo-content">
        <p class="todo-title">
            {{title}}
        </p>
        <p class="todo-date">
            Do by: 
            <a href="#">{{date}}</a>
        </p>
        <button type="button" class="btn btn-success">Done!</button>
        <button type="button" class="btn btn-danger">Cancel</button>
    </div>
 </article>